                    </div>
                    <div class="txt_center">
                        @foreach (Commic.Models.MasterPageSec4BTN obj in Model.objMasterPageSec4BTNListM)
                        {
                            if (obj.id == 1)
                            {
                            <a href="~/Index/PertABuller?id=1" style="text-decoration: none">

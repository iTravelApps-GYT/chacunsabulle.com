@model Commic.Models.Commic
@{
    ViewBag.Title = "RagistrationPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 @using (Html.BeginForm("RagistrationPage", "Index", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    { 
 <div id="Section2" >
    <!--About Us Page Code Start-->
    <section id="content">
        <div class="content-wrapd" id="identification_detail_2" style="height:400px;">
            <div id="slideshows" class="top_header" style="height:100px;">
                <div class="top_header_wrap">
                    <h2><center>Registration Here</center></h2>
                </div>
            </div>
            
            <!--Nakache Block-->
            <div id="nakache" class="payment_block" style="height:280px;">
                <center><table>
                <tr>
                <td width="100px"><label>Prénom</label></td>
                <td width="200px"> @Html.TextBoxFor(M => M.objRegistrationMaster.FirstName, new {name = "lstName", @onblur = "RemoveClass(this);" })</td>
                <td width="50px"></td>
                <td width="200px"><label>Nom</label></td>
                <td width="200px"> @Html.TextBoxFor(M => M.objRegistrationMaster.LastName, new { @id = "LastName", name = "lastName", @onblur = "RemoveClass(this);" })</td>
                </tr>
                <tr>
                <td><label>Email</label></td><td> @Html.TextBoxFor(M => M.objRegistrationMaster.EmailID, new { @id = "email", name = "email", @onblur = "RemoveClass(this);" })</td><td></td><td><label>Confirmez l'email</label></td><td><input type="text" id="remail" name="remail" onblur="RemoveClass(this);" /></td></tr>
                <tr><td><label>Mot de passe</label></td><td> @Html.TextBoxFor(M => M.objRegistrationMaster.Password, new { @id = "pass", @type="password", name = "pass", @onblur = "RemoveClass(this);" })</td><td></td><td><label>Confirmer le mot de passe</label></td><td><input type="password" id="repass" name="repass" onblur="RemoveClass(this);" /></td></tr>
                @*<tr><td colspan="2"><input type="button" name="reg" value="Sign IN"/></td><td colspan="3" align="right"><input type="button" name="reg" value="Create"/></td></tr>*@
                </table></center>
                
            </div>
            
            <!--Votre Block-->
        </div>
        @*<div id="btn1" class="button orange_btn" style="background-image: url(../Images/orange_btn.png);background-repeat: no-repeat;background-size: 20% auto;height: 40px;background-position: center;"><input type="submit" name="btnsave" value="SignIN" /></div>*@
        <div id="btn2" class="button orange_btn" style="background-image: url(../Images/orange_btn.png);background-repeat: no-repeat;background-size: 20% auto;height: 40px;background-position: center;"><input type="submit" onclick="return Validation();" name="btnsave" value="SignUP" /></div>
    </section>
    <!--About Us Page Code End-->
</div>
    }

<script>
    function Validation() {
        //alert("hello");
        if (($("#objRegistrationMaster_FirstName").val().length < 3) || ($("#LastName").val().length < 1) || ($("#email").val().length < 1) || ($("#pass").val().length < 1) || ($("#remail").val().length < 1) || ($("#repass").val().length < 1)) {
            if ($("#objRegistrationMaster_FirstName").val().length < 3) {
                $("#objRegistrationMaster_FirstName").addClass("error");

            }
            if ($("#LastName").val().length < 1) {
                $("#LastName").addClass("error");

            }
            if ($("#pass").val().length < 1) {
                $("#pass").addClass("error");

            }
            if ($("#email").val().length < 1) {
                $("#email").addClass("error");

            }
            if ($("#remail").val().length < 1) {
                $("#remail").addClass("error");

            }
            if ($("#repass").val().length < 1) {
                $("#repass").addClass("error");

            }
            return false;
        }
        else {
            if (($("#email").val() != $("#remail").val())) {
                $("#email").addClass("error");
                $("#remail").addClass("error");
                return false;
            }
            else {
                $("#email").removeClass("error");
                $("#remail").removeClass("error");
            }
            if (($("#pass").val() != $("#repass").val()))
            {
                $("#pass").addClass("error");
                $("#repass").addClass("error"); return false;
            }
            else {
                $("#pass").removeClass("error");
                $("#repass").removeClass("error");
                return true;
            }
        }
    }
</script>
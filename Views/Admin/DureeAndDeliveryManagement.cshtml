    @using (Html.BeginForm("DureeAndDeliveryManagement", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    { 
        <center><table width="50%" border="1" height="200px">
            <tr>
                <td >Subscription Time Duration
                </td>
                <td>@Html.TextBoxFor(M => M.objSubTimeclass.SubsTimeDuration, new { @maxlength="300", @style="width:300px;" })     
                </td>
                </tr><tr>
                <td >Duration's Price
                </td>
                <td>@Html.TextBoxFor(M => M.objSubTimeclass.SubsTimePrice, new { @maxlength="20", @style="width:200px;",@ToolTip="Enter Deliver Price" })     
                </td>
            </tr>
            <tr>
                <td>Delivery Type
                </td>
                <td>@Html.TextBoxFor(M => M.objSubDeliveryclass.DeliveryType, new { @maxlength="300", @style="width:300px;" })     
                </td>
                </tr><tr>
                <td >Delivery Price
                </td>
                <td >@Html.TextBoxFor(M => M.objSubDeliveryclass.DeliveryPrice, new { @maxlength="20", @style="width:200px;" })     
                </td>
            </tr>
            <tr><td colspan="6" align="center"><label id="result">@ViewBag.Message</label></td></tr>
            <tr><td colspan="6" align="center"><input type="submit" name="submit" value="Update" style="background-image:url(../Images/green_btn);width:200px;height:30px; " /></td></tr>
            </table></center>
        <div id="divgrid"><center><h3>Sub's Duration Table</h3>
        <table width="70%" id="tblData" border="1">
            <tr>
                
                <th>S.No.</th>
                <th>Sub's Duration Time</th>
                <th>Price</th>
                <th colspan="2">Action</th>

            </tr>
               @foreach (Commic.Models.SubscriptionTimeDuration obj in Model.objSubsTimeListM)
                {
                <tr>
                    <td width="50" align="center">
                        <input type="hidden" value='@obj.id' data-Duration='@obj.SubsTimeDuration ' data-Price='@obj.SubsTimePrice' />
                       <a href="#" onclick="FillEdit(@obj.id); return false;"> @obj.id</a>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(@obj.SubsTimeDuration)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubsTimePrice)@Html.Raw(Model.objSubMasterclass.FirstSubsUnit)</span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="FillEdit(@obj.id); return false;">Edit</a></span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="Deleterecord(@obj.id); return false;">Delete</a></span>
                    </td>
                </tr>
               }
        </table> <h3>Delivery Table</h3>
            <table width="70%" id="tblData1" border="1">
            <tr>
                
                <th>S.No.</th>
                <th>Delivery Type</th>
                <th>Price</th>
                <th colspan="2">Action</th>

            </tr>
               @foreach (Commic.Models.SubscriptionDeliveryTypes obj in Model.objSubsDeliveryListM)

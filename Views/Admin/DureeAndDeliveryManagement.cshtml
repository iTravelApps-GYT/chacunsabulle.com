                <tr>
                    <td width="50" align="center">
                        <input type="hidden" value='@obj.id' data-Duration='@obj.DeliveryType ' data-Price='@obj.DeliveryPrice' />
                       <a href="#" onclick="FillEdit(@obj.id); return false;"> @obj.id</a>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(@obj.DeliveryType)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.DeliveryPrice)</span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="FillEdit(@obj.id); return false;">Edit</a></span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="Deleterecord(@obj.id); return false;">Delete</a></span>
                    </td>
                </tr>
               }
        </table> 

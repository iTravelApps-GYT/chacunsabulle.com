            </td>
           </tr>
            <tr>
                <td colspan="1"><strong>Description</strong></td> 
                <td colspan="3">@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsDescription, new {@Style="Width:770px" })  
            </td>
           </tr>
            <tr>
                <td width="200px"><strong>Button Image</strong></td><td><input id="upload1" name="upload1" type="file" /></td>
                <td width="200px"><strong>Button Caption</strong></td><td colspan="2">@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsbtnCaption, new {@Style="Width:200px" })</td>
            </tr>
            <tr>
                <td width="200px" colspan="1"><strong>Footer Description</strong></td><td colspan="3">@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsFooter, new {@Style="Width:770px" })  
                </td>
           </tr>
            <tr><td colspan="4" align="center"><label id="result1">@ViewBag.Message</label></td></tr>

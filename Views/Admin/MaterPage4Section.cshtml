    <center><hr color="green"/><font size="6">Section 4 of Main Page</font><hr color="green"/></center>
    @using (Html.BeginForm("MaterPage4Section", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    { 
        <center><table width="80%" border="1" height="300px">
            <tr>
                <td width="200px"><strong>Main Image</strong></td><td width="200px"><input id="upload1" name="upload1" type="file" /></td>
               <td width="200px"><strong>Icon Image URL</strong></td><td width="200px"><input id="upload1" name="upload1" type="file" /></td>
            </tr>
            <tr>
                <td width="200px" colspan="1"><strong>Heading</strong></td>
                 <td width="200px" colspan="3">@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsHeading, new {@Style="Width:770px" })</td>
            </tr>
            <tr>
                <td width="200px"><strong>Price</strong></td>
                <td>@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsPrice, new {@Style="Width:200px" })</td>
                <td width="200px"><strong>Unit</strong></td>
                <td>@Html.TextBoxFor(M => M.objMasterPageSec4BTN.SubsUnit, new {@Style="Width:200px" })</td>
            </tr>
            <tr>
                <td colspan="1"><strong>Sub Heading</strong></td> 

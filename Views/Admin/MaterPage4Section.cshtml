        <input type="hidden" id="hdd" name="hdd" value="0"/>
        <br /><center>
        <h3>Subscription's Table</h3>
            <table width="70%" id="tblData1" border="1">
            <tr>
                
                <th>S.No.</th>
                <th>Heading</th>
                <th>Sub Heading</th>
                <th>Description</th>
                <th>Price/Unit</th>
                <th>Button Caption</th>
                <th>Footer</th>
                <th colspan="2">Action</th>

            </tr>
               @foreach (Commic.Models.MasterPageSec4BTN obj in Model.objMasterPageSec4BTNListM)
                {
                <tr>
                    <td width="50" align="center">
                        <input type="hidden" value="@obj.id" data-Heading="@obj.SubsHeading" data-SubHead="@obj.SubssubHeading" data-desc="@obj.SubsDescription" data-Footer="@obj.SubsFooter" data-Price="@obj.SubsPrice" data-unit="@obj.SubsUnit" data-btncaption="@obj.SubsbtnCaption" />
                        @obj.id
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(@obj.SubsHeading)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubssubHeading)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubsDescription)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubsPrice)@Html.Raw(obj.SubsUnit)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubsbtnCaption)</span>
                    </td>
                    <td width="200" align="center">
                       <span>@Html.Raw(obj.SubsFooter)</span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="FillEdit(@obj.id); return false;">Edit</a></span>
                    </td>
                    <td width="50" align="center">
                       <span><a href="#" onclick="Delete(@obj.id); return false;">Delete</a></span>
                    </td>
                </tr>
               }
        </table> 
                          </center>
    }
    <script type="text/javascript">
        function FillEdit(obj) {

            $("#hdd").val(obj);
            alert(obj);
            var $ele = $("#tblData1 tr td input[value=" + obj + "]");
            if ($ele != null) {
                $('#objMasterPageSec4BTN_SubsHeading').val($ele.attr("data-heading"));
                $('#objMasterPageSec4BTN_SubssubHeading').val($ele.attr("data-SubHead"));
                $('#objMasterPageSec4BTN_SubsDescription').val($ele.attr("data-desc"));
                $('#objMasterPageSec4BTN_SubsFooter').val($ele.attr("data-Footer"));
                $('#objMasterPageSec4BTN_SubsPrice').val($ele.attr("data-Price"));
                $('#objMasterPageSec4BTN_SubsUnit').val($ele.attr("data-unit"));
                $('#objMasterPageSec4BTN_SubsbtnCaption').val($ele.attr("data-btncaption"));
            }

        }
    </script> 
     <script type="text/javascript" >
         function Delete(obj) {
             var status = confirm('Are you sure to delete');
             if (status) {
                 alert(obj);
                 $.ajax({

                     type: "post",
                     url: "/Admin/DeletersSec4Subcription",
                     data: { "id": obj },
                     success: (function (data) {
                         $("#divSlideShow").html(data)
                     }),
                     fail: (function (data) {
                     })
                 });
             }
         }
    </script>
